---
import { getCollection, render } from "astro:content";
import type { CollectionEntry } from "astro:content";
import Layout from "@/layouts/BaseLayout.astro";
import Article from "@/components/page/Article.astro";
import { getSpeakerDeckThumbnailFromId } from "@/lib/speakerDeck";

export async function getStaticPaths() {
	const talks = await getCollection("talk");
	return talks.map((talk) => ({
		params: { slug: talk.id },
		props: talk,
	}));
}

const talk: CollectionEntry<"talk"> = Astro.props;

// Get SpeakerDeck thumbnail for OG image
let ogImageUrl = `https://storage.r2.ogatakatsuya.com/${talk.id}.png`;
if (talk.data.speakerDeckId) {
  const thumbnailUrl = await getSpeakerDeckThumbnailFromId(talk.data.speakerDeckId);
  if (thumbnailUrl) {
    ogImageUrl = thumbnailUrl;
  }
}
---

<Layout
  title={`Talk | ${talk.data.title}`}
  description={talk.data.summary}
  pagefind={true}
  og={{
    enabled: true,
    width: 1200,
    height: 630,
    image: new URL(ogImageUrl, Astro.url),
  }}
  type="article"
>
  <main class="min-h-screen pt-30 pb-16">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <article class="max-w-4xl mx-auto bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 sm:p-8 lg:p-12">
        <!-- Ë®ò‰∫ã„Éò„ÉÉ„ÉÄ„Éº -->
        <header class="mb-8">
          <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold text-gray-900 dark:text-white mb-4">
            {talk.data.title}
          </h1>
          <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 dark:text-gray-300 mb-4">
            <div class="flex items-center">
              <span class="mr-2">Publised:</span>
              <time datetime={talk.data.createdAt.toISOString()}>
                {new Intl.DateTimeFormat('jp-JP', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                }).format(talk.data.createdAt)}
              </time>

              {talk.data.updatedAt && (
              <>
                  <span class="mx-2">/</span>
                  <span class="mr-2">Last Modified:</span>
                  <time datetime={talk.data.updatedAt.toISOString()}>
                    {new Intl.DateTimeFormat('jp-JP', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric'
                    }).format(talk.data.updatedAt)}
                  </time>
              </>
              )}
            </div>
            {talk.data.tags && talk.data.tags.length > 0 && (
                <div class="flex items-center">
                    <span class="mr-2">üè∑Ô∏è</span>
                    <div class="flex flex-wrap gap-2">
                        {talk.data.tags.map((tag: string) => (
                            <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 text-xs rounded-full">
                                {tag}
                            </span>
                        ))}
                    </div>
                </div>
            )}
          </div>
          {talk.data.summary && (
            <div class="text-sm md:text-base text-gray-700 dark:text-gray-300 leading-relaxed border-l-4 border-blue-500 pl-4 bg-blue-50 dark:bg-blue-900/20 p-4 rounded-r-lg">
              {talk.data.summary}
            </div>
          )}
        </header>

        <Article post={talk}/>
      </article>
    </div>
  </main>
</Layout>
