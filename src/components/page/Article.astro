---
import { render } from "astro:content";
import type { CollectionEntry } from "astro:content";
import Toc from "../ui/Toc.astro";

interface Props {
	post: CollectionEntry<"blog" | "talk">;
}

const { post } = Astro.props;

const { Content, headings } = await render(post);
---

<article id="post">
  <Toc headings={headings} />
  <Content />
</article>

<style is:global>
  #post {
    grid-row: content-start / content-end;
    border-bottom: 1.5px solid var(--ui-border);
    padding-bottom: 2rem;

    & h1 {
      font-size: 1.875rem;
      font-weight: 700;
      line-height: 1.2;
      margin-top: 2.5rem;
      margin-bottom: 1.5rem;
      color: var(--ui-text);
      border-bottom: 2px solid var(--ui-border);
      padding-bottom: 0.5rem;
    }

    & h2 {
      font-size: 1.5rem;
      font-weight: 600;
      line-height: 1.3;
      margin-top: 2rem;
      margin-bottom: 1rem;
      color: var(--ui-text);
      border-bottom: 1px solid var(--ui-border);
      padding-bottom: 0.25rem;
    }

    & h3 {
      font-size: 1.25rem;
      font-weight: 600;
      line-height: 1.4;
      margin-top: 1.75rem;
      margin-bottom: 0.75rem;
      color: var(--ui-text);
    }

    & h4 {
      font-size: 1.125rem;
      font-weight: 600;
      line-height: 1.4;
      margin-top: 1.5rem;
      margin-bottom: 0.5rem;
      color: var(--ui-text);
    }

    & h5 {
      font-size: 1rem;
      font-weight: 600;
      line-height: 1.4;
      margin-top: 1.25rem;
      margin-bottom: 0.5rem;
      color: var(--ui-text);
    }

    & h6 {
      font-size: 0.875rem;
      font-weight: 600;
      line-height: 1.4;
      margin-top: 1rem;
      margin-bottom: 0.5rem;
      color: var(--ui-text);
    }

    & section {
      margin-top: 2rem;
    }

    & a:not(.card, .heading-link, .data-footnote-backref) {
      text-decoration-line: underline;
      text-decoration-thickness: 1.5px;
      text-underline-offset: 4.5px;
      margin-inline: 0.1em;
    }

    & p {
      margin-block: 0.75rem;
    }

    & table {
      display: block;
      overflow-x: auto;
      margin-block: 1rem;
      text-align: center;

      & th,
      & td {
        border: 1px solid var(--ui-border);
        padding: 0.25rem 0.5rem;
      }
    }

    & ul {
      list-style-type: disc;
      margin-block: 1rem;
    }
    & ol {
      list-style-type: decimal;
    }
    & li {
      margin-block: 0.75rem;
      margin-left: 1rem;
      list-style-position: inside;
      & p {
        display: inline;
      }
    }
  }
</style>
