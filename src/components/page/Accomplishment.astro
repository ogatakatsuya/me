---
import { Icon } from "astro-icon/components";

interface Accomplishment {
	title: string;
	description?: string;
	link?: string;
}

const accomplishments: Accomplishment[] = [
  {
    title: "Best Growth Award - CyberAgent Go College Internship",
  },
  {
    title: "First Prize - 58 Hackathon",
  },
  {
    title: "First Prize - Minavi Full Stack Hackathon",
  },
  {
    title: "Completed “Chair for Global Consumer Intelligence (GCI)” Program",
    link: "/accomplishments/GCI.pdf",
  },
  {
    title: "Completed the Deep Learning Basic Course",
    link: "/accomplishments/DeepLearningBasic.pdf",
  },
  {
    title: "Completed the Large‑Scale Language Model (LLM) Course (Fundamentals & Applied)",
    link: "/accomplishments/LLM.pdf",
  }
];
---

<section id="accomplishments">
	<div class="container mx-auto px-4 md:px-12">
		<div class="space-y-3 max-w-4xl mx-auto">
			{accomplishments.map((accomplishment) => (
        <div class="flex items-start space-x-3">
          <div class="flex-shrink-0 mt-1">
            <Icon name="ri:trophy-line" class="w-5 h-5 text-blue-600 dark:text-blue-400" />
          </div>
          <div class="flex-1">
            <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200">
              {accomplishment.title}
            </h3>
            
            {accomplishment.description && (
              <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed mb-3">
                {accomplishment.description}
              </p>
            )}
            
            {accomplishment.link && (
              <a 
                href={accomplishment.link} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 text-sm font-medium transition-colors duration-200"
              >
                <span>Learn more</span>
                <Icon name="ri:external-link-line" class="w-4 h-4 ml-1" />
              </a>
            )}
          </div>
        </div>
			))}
		</div>
	</div>
</section>