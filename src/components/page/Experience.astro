---
import { clsx } from "clsx";
import { Icon } from "astro-icon/components";
import { Card, CardContent } from "@/components/ui/card";

const experiences = [
	{
		index: "first",
		title: "Bachelor",
		company: "Osaka University",
		link: "https://www.osaka-u.ac.jp/en",
		year: "2022/04 - present",
		side: "left",
	},
	{
		index: "second",
		title: "Long term Internship",
		company: "Emuni",
		link: "https://www.emuniinc.jp/",
		year: "2024/05 - Present",
		side: "right",
	},
	{
		index: "third",
		title: "Internship",
		company: "Yuzuriha",
		link: "https://yzrh.jp/",
		year: "2024/05 - 2024/06",
		side: "left",
	},
	{
		index: "fourth",
		title: "Internship",
		company: "Speee",
		link: "https://speee.jp/",
		year: "2024/08 (3weeks)",
		side: "right",
	},
	{
		index: "fifth",
		title: "Internship",
		company: "Visional",
		link: "https://www.visional.inc/ja/index.html",
		year: "2024/09 (1week)",
		side: "left",
	},
	{
		index: "sixth",
		title: "Internship(Go College)",
		company: "CyberAgent",
		link: "https://www.cyberagent.co.jp/",
		year: "2025/02 - 2025/03",
		side: "right",
	},
	{
		index: "seventh",
		title: "Long term Internship",
		company: "Techouse",
		link: "https://jp.techouse.com/",
		year: "2024/09 - 2025/04",
		side: "left",
	},
];
---

<section id="timeline">
    <h2 class="text-3xl font-bold mb-10 flex justify-center">My Experience</h2>
    <div class="container mx-auto px-4 md:px-12 mb-15">
        {/* デスクトップ版 */}
        <div class="relative w-full max-w-3xl mx-auto hidden md:block">
            {/* 中央線 */}
            <div class="absolute left-1/2 transform -translate-x-1/2 w-1 bg-gray-500 h-full" />
            
            {experiences.map((exp) => (
                <div class={clsx(
                    "relative flex items-center", 
                    exp.side === "left" 
                        ? "flex-row" 
                        : "flex-row-reverse"
                )}>
                    {/* カード */}
                    <div class={clsx(
                        "w-5/12",
                        exp.side === "left" ? "pr-8" : "pl-8"
                    )}>
                        <Card className="shadow-lg text-center bg-gradient-to-b from-slate-100 to-slate-300/80 dark:from-gray-800 dark:to-gray-700/60">
                            {/* アイコンとタイトル */}
                            <CardContent className="grid gap-2">
                                <h3 class="text-xl font-bold">{exp.title}</h3>
                                <a class="text-gray-600 dark:text-gray-500 hover:underline" target="blank" href={exp.link}>{exp.company}</a>
                                <span class="text-sm text-gray-500">{exp.year}</span>
                            </CardContent>
                        </Card>
                    </div>
                    
                    {/* 点 */}
                    <div class="absolute left-1/2 transform -translate-x-1/2 flex items-center justify-center">
                        <div class="w-4 h-4 bg-gray-500 rounded-full border-4 border-white z-10"></div>
                    </div>
                    
                    {/* 接続線 */}
                    <div class={clsx(
                        "absolute top-1/2 transform -translate-y-1/2 w-1/12 h-1 bg-gray-500",
                        exp.side === "left" 
                            ? "left-5/12 -translate-x-4" 
                            : "right-5/12 translate-x-4"
                    )} />
                </div>
            ))}
        </div>
        
        {/* モバイル版 */}
        <div class="relative w-full max-w-md mx-auto md:hidden">
            {/* 縦線 */}
            <div class="absolute left-8 top-0 w-1 bg-gray-500 h-full" />
            
            {experiences.map((exp) => (
                <div class="relative pl-16 mb-10">
                    {/* 点 */}
                    <div class="absolute left-8 transform -translate-x-1/2 w-4 h-4 bg-gray-500 rounded-full border-4 border-white z-10"></div>
                    
                    {/* 接続線 */}
                    <div class="absolute top-2 left-8 transform -translate-x-1/2 ml-4 w-8 h-1 bg-gray-500"></div>
                    
                    {/* カード */}
                    <Card className="shadow-lg text-center bg-gradient-to-b from-slate-100 to-slate-300/80 dark:from-gray-800 dark:to-gray-700/60">
                        <h3 class="text-xl font-bold">{exp.title}</h3>
                        <p class="text-gray-600">{exp.company}</p>
                        <span class="text-sm text-gray-500">{exp.year}</span>
                    </Card>
                </div>
            ))}
        </div>
    </div>
</section>
