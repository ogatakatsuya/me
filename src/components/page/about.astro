---
import "../../styles/global.css";

import { clsx } from "clsx";
import { Briefcase } from "lucide-react";
import { Card, CardContent } from "@/components/ui/card";

const experiences = [
    {
        index: "first",
        title: "Bachelor",
        company: "Osaka University",
        link: "https://www.osaka-u.ac.jp/en",
        year: "2022/04 - present",
        side: "left"
    },
    {
        index: "second",
        title: "Fullstack Developer",
        company: "Emuni",
        link: "https://www.emuniinc.jp/",
        year: "2024/05 - Present",
        side: "right"
    },
    {
        index: "third",
        title: "Internship",
        company: "Yuzuriha",
        link: "https://www.emuniinc.jp/",
        year: "2024/05 - 2024/06",
        side: "left"
    },
    {
        index: "fourth",
        title: "Internship(Go College)",
        company: "CyberAgent",
        link: "https://www.emuniinc.jp/",
        year: "2025/02 - 2025/03",
        side: "right"
    }
];
---

<section id="timeline" class="py-16 bg-gray-200 text-gray-800">
    <div class="container mx-auto px-4 md:px-12">
        <h2 class="text-3xl font-bold tracking-tight mb-8 text-center">My Career</h2>
        
        {/* デスクトップ版 */}
        <div class="relative w-full max-w-3xl mx-auto hidden md:block">
            {/* 中央線 */}
            <div class="absolute left-1/2 transform -translate-x-1/2 w-1 bg-blue-500 h-full" />
            
            {experiences.map((exp) => (
                <div class={clsx(
                    "relative flex items-center", 
                    exp.side === "left" 
                        ? "flex-row" 
                        : "flex-row-reverse"
                )}>
                    {/* カード */}
                    <div class={clsx(
                        "w-5/12",
                        exp.side === "left" ? "pr-8" : "pl-8"
                    )}>
                        <Card className="shadow-lg text-center">
                            <CardContent className="grid gap-2">
                                <Briefcase className="text-blue-500 mx-auto" />
                                <h3 class="text-xl font-bold">{exp.title}</h3>
                                <a class="text-gray-600 hover:underline" target="blank" href={exp.link}>{exp.company}</a>
                                <span class="text-sm text-gray-500">{exp.year}</span>
                            </CardContent>
                        </Card>
                    </div>
                    
                    {/* 点 */}
                    <div class="absolute left-1/2 transform -translate-x-1/2 flex items-center justify-center">
                        <div class="w-4 h-4 bg-blue-500 rounded-full border-4 border-white z-10"></div>
                    </div>
                    
                    {/* 接続線 */}
                    <div class={clsx(
                        "absolute top-1/2 transform -translate-y-1/2 w-1/12 h-1 bg-blue-500",
                        exp.side === "left" 
                            ? "left-5/12 -translate-x-4" 
                            : "right-5/12 translate-x-4"
                    )} />
                </div>
            ))}
        </div>
        
        {/* モバイル版 */}
        <div class="relative w-full max-w-md mx-auto md:hidden">
            {/* 縦線 */}
            <div class="absolute left-8 top-0 w-1 bg-blue-500 h-full" />
            
            {experiences.map((exp) => (
                <div class="relative pl-16 mb-10">
                    {/* 点 */}
                    <div class="absolute left-8 transform -translate-x-1/2 w-4 h-4 bg-blue-500 rounded-full border-4 border-white z-10"></div>
                    
                    {/* 接続線 */}
                    <div class="absolute top-2 left-8 transform -translate-x-1/2 ml-4 w-8 h-1 bg-blue-500"></div>
                    
                    {/* カード */}
                    <Card className="shadow-lg text-center">
                        <Briefcase className="text-blue-500 mx-auto mb-2" />
                        <h3 class="text-lg font-bold">{exp.title}</h3>
                        <p class="text-gray-600">{exp.company}</p>
                        <span class="text-sm text-gray-500">{exp.year}</span>
                    </Card>
                </div>
            ))}
        </div>
    </div>
</section>
