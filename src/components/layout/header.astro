---
import "../../styles/global.css";
---

<header class="bg-indigo-100 flex items-center justify-between h-16 px-10 dark:bg-gray-800">
    <!-- Left: Logo and Site Name -->
    <div class="flex items-center">
        <h1 class="font-bold text-lg">Logo</h1>
    </div>

    <!-- Center: Navigation Menu -->
    <nav class="flex flex-grow justify-center">
        <ul class="flex gap-10">
            <li><a href="/" class="text-sm font-medium hover:text-indigo-500">Home</a></li>
            <li><a href="/about" class="text-sm font-medium hover:text-indigo-500">About</a></li>
            <li><a href="/skill" class="text-sm font-medium hover:text-indigo-500">Skill</a></li>
            <li><a href="/blog" class="text-sm font-medium hover:text-indigo-500">Blog</a></li>
        </ul>
    </nav>

    <!-- Right: Dark Mode Toggle Button -->
    <div class="flex items-center gap-4">
        <button class="p-2 rounded-full hover:bg-indigo-200 dark:hover:bg-gray-700">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-6 h-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 5v.01M12 19v.01M5 12h.01M19 12h.01M12 2a10 10 0 00-6.93 16.93 10 10 0 0013.86-13.86A10 10 0 0012 2z"
                ></path>
            </svg>
        </button>
    </div>
</header>
