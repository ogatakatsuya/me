<header class="fixed w-full top-8 z-50 flex justify-center pointer-events-none">
  <div class="bg-white/80 dark:bg-gray-900/80 border-2 border-gray-400 dark:border-yellow-100 rounded-xl shadow-md px-2 sm:px-4 py-2 w-[95vw] max-w-3xl pointer-events-auto transition-colors duration-300">
    <nav class="flex flex-row flex-nowrap items-center justify-center gap-2 sm:gap-6 overflow-x-auto">
      <div class="flex gap-6">
        <a href="/" class="font-bold hover:underline hover:text-blue-500 dark:hover:text-yellow-300 active:scale-95 transition-transform duration-100">Home</a>
        <a href="/about" class="font-bold hover:underline hover:text-blue-500 dark:hover:text-yellow-300 active:scale-95 transition-transform duration-100">About</a>
        <a href="/blog" class="font-bold hover:underline hover:text-blue-500 dark:hover:text-yellow-300 active:scale-95 transition-transform duration-100">Blog</a>
      </div>
      <div class="flex items-center">
        <button id="toggle-darkmode" aria-label="ダーク/ライト切り替え" class="p-2 rounded transition text-xl hover:bg-blue-100/40 hover:text-blue-600 dark:hover:bg-yellow-900/30 dark:hover:text-yellow-300 active:scale-90 duration-100">
          🌞
        </button>
      </div>
    </nav>
  </div>
</header>

<script>
  import { initDarkMode, setLightMode, setDarkMode, isDark, updateButton, watchSystemMode } from "../../lib/darkmode";

  initDarkMode();
  updateButton();
  watchSystemMode();

  const btn = document.getElementById("toggle-darkmode");
  if (btn) {     
        btn.addEventListener("click", () => {
            isDark() ? setLightMode() : setDarkMode();
            updateButton();
        });
  }
</script>


